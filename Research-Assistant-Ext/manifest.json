{
    "manifest_version":3,
    "name":"Research Assitant",
    "version":"1.0",
    "description":"AI-powered tool for research",
    "permissions":[
        "activeTab",
        "Storage",
        "sidePanel",
        "Scripting"
    ],
    "action":{
        "default_title":"Research Assitant"
    },
    "side_panel":{
        "default_path":"sidepanel.html"
    },
    "background":{
        "service_worker":"background.js"
    },
    "host_permissions":[
        "http://localhost:8080/*",
        "<all_urls>"
    ],
    "content_security_policy":{
        "extension_pages":"script-src 'self'; object-src 'self'"
    }
}